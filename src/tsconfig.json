{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom" // setInterval, console
    ],
    "paths": {
      "@logic/*": [
        "./logic/*"
      ],
      "@layout/*": [
        "./layouts/hat-city-layout/*"
      ]
    }
  }
}
